#!/usr/bin/env bash
# This script creates a 4096-bit RSA key pair with a passphrase

# Set the private key file name and passphrase
PRIVATE_KEY="school"
PASSPHRASE="betty"

# Generate the RSA key pair if it does not already exist
if [ ! -f "$PRIVATE_KEY" ]; then
    ssh-keygen -t rsa -b 4096 -N "$PASSPHRASE" -f "$PRIVATE_KEY" -C "Generated by 1-create_ssh_key_pair script"
    echo "RSA key pair generated successfully."
else
    echo "Error: Key file '$PRIVATE_KEY' already exists."
fi
